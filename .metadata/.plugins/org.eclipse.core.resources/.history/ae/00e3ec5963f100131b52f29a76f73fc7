  		<option value="vmn-339-S">VMN-339-S</option>
  		<option>------------------</option>
  	</select>
  	<select id="api" onChange=chart('http://localhost:8082/rest/api/?pxname=healthkart&box=api&svname='+this.value);>
  		<option>Production Boxes</option>
  		<option value="spkd-0210">VMN-265-P</option>
  		<option value="spkd-0211">VMN-400-Q</option>
